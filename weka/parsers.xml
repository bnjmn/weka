<?xml version="1.0" encoding="UTF-8"?>

<!--
  ANT file for generating JFlex/CUP parsers.

  If you want to add new parsers, you basically only need to do the
  following three things:
  - write JFlex and CUP files for your parser
  - add a new target for you Parser, for generating code from the JFLex and CUP
    files, at the end of this ANT file
  - add the name of this target as "antcall" to the "parsers" target

  For an example, please refer to the "mathematicalexpression" parser (here in
  this ANT file and also the respective JFLex and CUP files).

  URLs:
  - JFlex
    http://jflex.de/
  - CUP
    http://www2.cs.tum.edu/projects/cup/

  Author:  FracPete (fracpete at waikato dot ac dot nz)
  Version: $Revision: 1.1 $
-->

<project name="weka-parsers" default="compile_inline" basedir=".">
   <property name="build.compiler" value="modern" />
   <property name="debug"          value="on" />
   <property name="deprecation"    value="off" />
   <property name="optimization"   value="off" />
   <property name="build"          value="build"/>

   <target name="init" description="Sets up the environment.">
      <available file="weka" type="dir" property="path_modifier" value=""/>
      <available file="../weka" type ="dir" property="path_modifier" value="../"/>
   </target>
   
   <target name="compile_inline" depends="init" description="Compiles Weka.">
      <!-- compile Weka -->
      <ant antfile="build.xml" target="compile_inline"/>
      <!-- generate parsers -->
      <property name="classpath" value="${path_modifier}"/>
      <antcall target="parsers"/>
      <!-- recompile Weka -->
      <ant antfile="build.xml" target="compile_inline"/>
   </target>
   
   <target name="compile" depends="init" description="Compiles Weka (inline).">
      <!-- compile Weka -->
      <ant antfile="build.xml" target="compile"/>
      <!-- generate parsers -->
      <property name="classpath" value="${path_modifier}${build}/classes"/>
      <antcall target="parsers"/>
      <!-- recompile Weka -->
      <ant antfile="build.xml" target="compile"/>
   </target>
   
   <!-- central target for calling the parser targets -->
   <target name="parsers" depends="init" description="Generates all the parsers subsequently.">
      <antcall target="mathexpression"/>
      <!-- add calls to further parsers here -->
   </target>

   <target name="mathexpression" depends="init" description="Generates the MathematicalExpression parser.">
      <echo message="Generating lexer."/>
      <java classname="weka.core.parser.JFlex.Main">
	 <classpath>
            <pathelement location="${classpath}"/>
            <pathelement path="${path_modifier}${java.class.path}"/>
	 </classpath>
         <arg value="--jlex"/>
         <arg value="--quiet"/>
         <arg value="--nobak"/>
         <arg value="--outdir"/>
         <arg value="${path_modifier}weka/core/mathematicalexpression"/>
         <arg value="${path_modifier}weka/core/mathematicalexpression/Scanner.jflex"/>
      </java>
      <echo message="Generating parser."/>
      <java classname="weka.core.parser.java_cup.Main">
	 <classpath>
            <pathelement location="${classpath}"/>
            <pathelement path="${path_modifier}${java.class.path}"/>
	 </classpath>
         <arg value="-parser"/>
         <arg value="Parser"/>
         <arg value="-interface"/>
         <arg value="-destdir"/>
         <arg value="${path_modifier}weka/core/mathematicalexpression"/>
         <arg value="${path_modifier}weka/core/mathematicalexpression/Parser.cup"/>
      </java>
   </target>

   <!-- add further parser targets here -->
</project>
